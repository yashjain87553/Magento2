<view xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Config/etc/view.xsd">
    
    <vars module="Magento_Catalog">

        <!-- Gallery and magnifier theme settings. Start -->
        

        <var name="magnifier">
            <var name="fullscreenzoom">100</var>  <!-- Zoom for fullscreen (integer)-->
            <var name="top">40%</var> <!-- Top position of magnifier -->
            <var name="left">60%</var> <!-- Left position of magnifier -->
            <var name="width">300</var> <!-- Width of magnifier block -->
            <var name="height">200</var> <!-- Height of magnifier block -->
            <var name="eventType">hover</var> <!-- Action that atcivates zoom (hover/click) -->
            <var name="enabled">true</var> <!-- Turn on/off magnifier (true/false) -->
        </var>

        
        <!-- end. Gallery and magnifier theme settings -->
    </vars>
